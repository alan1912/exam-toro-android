<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add.AddActivity">

    <TextView
        android:id="@+id/addMemberNameTitle"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="@string/add_textview_name_title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/addMemberName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/addMemberNameTitle"/>

    <TextView
        android:id="@+id/addMemberAgeTitle"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="@string/add_textview_age_title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/addMemberName"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/addMemberAge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/addMemberAgeTitle"/>

    <TextView
        android:id="@+id/addMemberGenderTitle"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="@string/add_textview_gender_title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/addMemberAge"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/addMemberGender"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/addMemberGenderTitle" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/menu_add_btn"
        android:layout_marginTop="20dp"
        android:background="@color/primary"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/addMemberGender" />
</androidx.constraintlayout.widget.ConstraintLayout>